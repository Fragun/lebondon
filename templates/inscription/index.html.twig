{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!{% endblock %}

{% block body %}
<body>
	

			<!-- End Navigation -->
			<div class="clearfix"></div>
			<!-- ============================================================== -->
			<!-- Top header  -->
			<!-- ============================================================== -->
			
			<!-- ======================= Login Detail ======================== -->
			<section class="gray">
				<div class="container">
					<div class="row align-items-start justify-content-center">
						<div class="col-xl-6 col-lg-8 col-md-12">
							{{form_start(form_utilisateur)}}
							<div class="signup-screen-wrap">
								<div class="signup-screen-single light">
									<div class="text-center mb-4">
										<h4 class="m-0 ft-medium">Créer une annonce</h4>
									</div>
									
									<form class="submit-form">
										<div class="row">
											
												<div class="form-group">
													<label class="mb-1">Votre nom</label>
													{{form_row(form_utilisateur.nomUtilisateur)}}
												</div>
											
												<div class="form-group">
													<label class="mb-1">Votre prénom</label>
													{{form_row(form_utilisateur.prenomUtilisateur)}}
												</div>

												<div class="form-group">
													<label class="mb-1">Votre genre</label>
												<div>
													{{form_row(form_utilisateur.genre)}}
													
												</div>
												</div>
											
											
										<div class="form-group">
											<label class="mb-1">Votre pseudo</label>
											{{form_row(form_utilisateur.pseudoUtilisateur)}}
										</div>
										
											
												<div class="form-group">
												<label class="mb-1">Votre adresse mail</label>
												{{form_row(form_utilisateur.mailUtilisateur)}}
											</div>
											</div>
										
										
											<div class="form-group">
											<label class="mb-1">Votre mot de passe</label>
											{{form_row(form_utilisateur.mdpUtilisateur)}}
										</div>
										
										<div class="form-group">
											{{form_row(form_utilisateur.save)}}
										</div>
										
										<div class="form-group text-center mb-0">
											<p class="extra">Ou se connecter avec</p>
											<div class="option-log">
												<div class="single-log-opt"><a href="javascript:void(0);" class="log-btn"><img src="assets/img/google.png" class="img-fluid" alt="" />Google</a></div>
												<div class="single-log-opt"><a href="javascript:void(0);" class="log-btn"><img src="assets/img/facebook.png" class="img-fluid" alt="" />Facebook</a></div>
											</div>
										</div>
										
										<div class="form-group text-center mt-4 mb-0">
											<p class="mb-0">Vous avez déjà un compte? <a href="login.html" class="ft-medium text-success">S'identifier</a></p>
										</div>
									</form>
								</div>
							</div>
							  {{form_end(form_utilisateur)}}
						</div>
					</div>
				</div>
			</section>
			<!-- ======================= Login End ======================== -->
			

		<!-- End Wrapper -->
		<!-- ============================================================== -->

		<!-- ============================================================== -->
		<!-- All Jquery -->
		<!-- ============================================================== -->
		<script src="assets/js/jquery.min.js"></script>
		<script src="assets/js/popper.min.js"></script>
		<script src="assets/js/bootstrap.min.js"></script>
		<script src="assets/js/slick.js"></script>
		<script src="assets/js/jquery.magnific-popup.min.js"></script>
		<script src="assets/js/dropzone.js"></script>
		<script src="assets/js/counterup.js"></script>
		<script src="assets/js/lightbox.js"></script>
		<script src="assets/js/moment.min.js"></script>
		<script src="assets/js/daterangepicker.js"></script>
		<script src="assets/js/lightbox.js"></script>		
		<script src="assets/js/jQuery.style.switcher.js"></script>
		<script src="assets/js/custom.js"></script>
		<!-- ============================================================== -->
		<!-- This page plugins -->
		<!-- ============================================================== -->		

	</body>
</html>
{% endblock %}
